<Window x:Class="PARTYapp.VersionChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PARTYapp"
        mc:Ignorable="d"
        Title="Welcome To PARTY app!" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="{StaticResource AppIcon}">
    <Grid>
        <Image Source="{StaticResource ChoiceBackground}" Height="450" Width="800"/>
        <Button Content="Choose Basic" HorizontalAlignment="Left" Margin="121,335,0,0" VerticalAlignment="Top" Width="150" Height="75" Background="White" Foreground="Blue" BorderThickness="3" Click="Button_Click"/>
        <Button Content="Choose Advanced" HorizontalAlignment="Left" Margin="533,335,0,0" VerticalAlignment="Top" Width="150" Height="75" Background="White" Foreground="Black" BorderThickness="3" Click="Button_Click_1"/>
    </Grid>
</Window>
