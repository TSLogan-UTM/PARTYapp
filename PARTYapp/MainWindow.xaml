<Window x:Class="PARTYapp.MainWindow"
        
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PARTYapp"
        mc:Ignorable="d"
        Title="P.A.R.T.Y. App - A FREE Pixel Art Creator" ResizeMode="NoResize" Height="300" Width="342"
        Icon="{StaticResource AppIcon}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="{StaticResource CanvasWindowBG}" Height="300" Margin="-37,-6,-35,-23.6" Grid.ColumnSpan="5" Grid.RowSpan="6" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.531"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.748"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="CreateButton" Grid.Row="5" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="3" Width="150" Height="50" x:FieldModifier="public" Background="LawnGreen" Content="CREATE!" FontSize="28" FontFamily="Calibri" FontWeight="Bold" Click="CreateButton_Click" Margin="41,5.333,10,22.333"/>
        <TextBox x:Name="HeightBox"  Grid.Row="2" Grid.Column="1" Height="23" Width="32" TextWrapping="Wrap" TextChanged="HeightBox_TextChanged" Margin="23.8,8.2,11.4,8" />
        <Slider x:Name="HeightSlider"  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" x:FieldModifier="public" Width="117" Height="18" ValueChanged="HeightSlider_ValueChanged" Maximum="100" Minimum="25" TickFrequency="25" TickPlacement="TopLeft" Margin="14.6,10.2,2.8,11"/>
        <TextBox x:Name="WidthBox" Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" Height="23" TextWrapping="Wrap" Width="32" TextChanged="WidthBox_TextChanged" Margin="23.8,27,11.4,27.6" />
        <Slider x:Name="WidthSlider" Grid.Row="3" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" x:FieldModifier="public" Width="117" Height="18" ValueChanged="WidthSlider_ValueChanged" Maximum="100" Minimum="25" TickFrequency="25" TickPlacement="TopLeft" Margin="14.6,30,2.8,29.6"/>
        <Image Source="{StaticResource CreateCanvasLabel}" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="5"/>
        <Image Source="{StaticResource CanvasHeight}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="6,0.2,61.4,0"/>
        <Image Source="{StaticResource CanvasWidth}" Grid.Row="3" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="6,0,61.4,38.8"/>
        <Image Source="{StaticResource 100Max}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="1" Margin="6.2,0.2,-6,0"/>
        <Image Source="{StaticResource 100Max}" Grid.Row="3" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="1" Margin="6.2,0,-6,38.8"/>
        <Button x:Name="Version" Grid.Row="4" Grid.RowSpan="3" Grid.ColumnSpan="3" Width="150" Height="50" x:FieldModifier="public" Background="{x:Null}" Content="Version: " FontFamily="Calibri" FontWeight="Bold" Click="Version_Button_Click" Margin="10,23.8,41.6,38.2" FontSize="17" BorderBrush="{x:Null}" IsHitTestVisible="False"/>
        <Button x:Name="Message1" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="3" Width="150" Height="50" x:FieldModifier="public" Background="{x:Null}" FontFamily="Calibri" FontWeight="Bold" Click="Version_Button_Click" Margin="10,-7,41.6,11.2" FontSize="17" BorderBrush="{x:Null}" IsHitTestVisible="False" Foreground="Red"/>
        <Button x:Name="Message2" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="3" Width="150" Height="50" x:FieldModifier="public" Background="{x:Null}" FontFamily="Calibri" FontWeight="Bold" Click="Version_Button_Click" Margin="10,20.4,41.6,11.2" FontSize="17" BorderBrush="{x:Null}" IsHitTestVisible="False" Foreground="Red"/>
    </Grid>
</Window>
