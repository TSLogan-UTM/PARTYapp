<Window x:Class="PARTYapp.MainWindow"
        Window.WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PARTYapp"
        mc:Ignorable="d"
        Title="PARTY App - A FREE Pixel Art Creator " Height="975" Width="1920">
    <Grid>
        <Image x:Name="TopBar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="105" Width="1920" Source="{StaticResource TopBar}" Margin="0,0,0,0"/>
        <Image x:Name="MenuBar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="700" Width="530" Source="{StaticResource MenuBar}" Margin="0,105,0,0"/>
        <Image x:Name="Background" HorizontalAlignment="Left" VerticalAlignment="Top" Height="835" Width="1390" Source="{StaticResource Background}" Margin="530,105,0,0"/>
        <Image x:Name="BottomBar" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="1920" Source="{StaticResource BottomBar}" Margin="0,940,0,0"/>

        <Button x:Name="CreateButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="125" Margin="359,323,0,0" Background="LawnGreen" Content="CREATE!" FontSize="28" FontFamily="Calibri" FontWeight="Bold">
        </Button>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="183,191,0,0" TextWrapping="Wrap" Text="Anything from 1-100" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="183,249,0,0" TextWrapping="Wrap" Text="Anything from 1-100" VerticalAlignment="Top" Width="120"/>

        <Image x:Name="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Red}" Margin="50,467,0,0"/>
        <Image x:Name="Orange" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Orange}" Margin="136,467,0,0"/>
        <Image x:Name="Yellow" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Yellow}" Margin="222,467,0,0"/>
        <Image x:Name="NeonGreen" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource NeonGreen}" Margin="308,467,0,0"/>
        <Image x:Name="LimeGreen" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource LimeGreen}" Margin="394,467,0,0"/>

        <Image x:Name="LightBlue" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource LightBlue}" Margin="50,549,0,0"/>
        <Image x:Name="Blue" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Blue}" Margin="136,549,0,0"/>
        <Image x:Name="Purple" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Purple}" Margin="222,549,0,0"/>
        <Image x:Name="LightPink" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource LightPink}" Margin="308,549,0,0"/>
        <Image x:Name="DarkPink" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource DarkPink}" Margin="394,549,0,0"/>

        <Image x:Name="Brown" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Brown}" Margin="50,631,0,0"/>
        <Image x:Name="White" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource White}" Margin="136,631,0,0"/>
        <Image x:Name="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource LightGray}" Margin="222,631,0,0"/>
        <Image x:Name="DarkGray" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource DarkGray}" Margin="308,631,0,0"/>
        <Image x:Name="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Width="86" Source="{StaticResource Black}" Margin="394,631,0,0"/>

    </Grid>
</Window>
